{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts",
    "test-e2e/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
